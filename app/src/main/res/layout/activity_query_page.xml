<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hackdfw.epiphanytripapp.QueryPage">

    <EditText android:text="" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Query_edit_text_1"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp"
        android:hint="@string/Query_command_1" />

    <EditText
        android:text=""
        android:hint="@string/Query_command_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Query_edit_text_2"
        android:textSize="20dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/Query_edit_text_1"
        android:layout_alignParentStart="true" />

    <EditText
        android:text=""
        android:hint="@string/Query_command_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Query_edit_text_3"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/Query_edit_text_2"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/button"
        android:layout_below="@+id/Query_edit_text_3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:onClick="startSearch"/>

</RelativeLayout>
